<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory android:title="@string/categoryGeneral" >
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="@string/checkbox_enableApp"
			android:persistent="true"
			android:summaryOff="@string/summaryAppDisabled"
			android:summaryOn="@string/summaryAppEnabled"
			android:title="@string/titleEnableApp" />
		
		<Preference
			android:selectable="true"
			android:title="@string/titleRate" 
			android:summary="@string/summaryRate" >
			<intent
				android:action="android.intent.action.VIEW"
				android:data="market://details?id=org.eurekainfosoluciones.syncmanager" />
		</Preference>
	</PreferenceCategory>
</PreferenceScreen>